<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewAnhSPXuat"
        android:layout_width="150dp"
        android:layout_height="130dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/tensptrongkhonsptrongkhoXuat"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/imageViewAnhSPXuat"
        android:gravity="center"
        android:text="Tên sảm phẩm"
        android:textAllCaps="false"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewAnhSPXuat"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/masptrongkhoXuat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mã sảm phẩm"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/soluongsptrongkhoXuat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SL:"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mausacspXuat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Màu sắc:"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/giaXuatKho"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Giá:"
            android:textAllCaps="true"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnXuatThemSP"
        android:layout_width="82dp"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_action_plus" />

</RelativeLayout>