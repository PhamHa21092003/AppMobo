<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Action.SuaSP_Action"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Sửa thông tin Sp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgSpSua"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_menu_gallery" />


        <ImageView
            android:id="@+id/btnThemanhSuaCamera"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imgSpSua"
            android:textSize="20sp"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/btnThemanhSuaFolder"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:layout_below="@+id/btnThemanhSuaCamera"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imgSpSua"
            android:textSize="20sp"
            app:srcCompat="@android:drawable/sym_contact_card" />

        <EditText
            android:id="@+id/editTextTenSanPhamSua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgSpSua"
            android:hint="Tên sản phẩm"
            android:inputType="textPersonName"
            android:textSize="25sp" />

       <RelativeLayout
           android:layout_below="@+id/editTextTenSanPhamSua"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/soluongsptrongkho">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/SIZE41">

               <TextView
                   android:id="@+id/tvsls41"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:text="Số lượng sản phẩm size 41:"
                   android:textSize="25sp" />

               <EditText
                   android:id="@+id/edtsls41"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_toRightOf="@+id/tvsls41"
                   android:inputType="number"
                   android:text="0"
                   android:textSize="25sp" />
           </RelativeLayout>

           <RelativeLayout
               android:id="@+id/SIZE42"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/SIZE41">

               <TextView
                   android:id="@+id/tvsls42"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:text="Số lượng sản phẩm size 42:"
                   android:textSize="25sp" />

               <EditText
                   android:id="@+id/edtsls42"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_toRightOf="@+id/tvsls42"
                   android:inputType="number"
                   android:text="0"
                   android:textSize="25sp" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/SIZE42"
               android:id="@+id/SIZE43">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tvsls43"
                   android:text="Số lượng sản phẩm size 43:"
                   android:textSize="25sp"
                   android:layout_centerVertical="true"/>

               <EditText
                   android:id="@+id/edtsls43"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_toRightOf="@+id/tvsls43"
                   android:inputType="number"
                   android:text="0"
                   android:textSize="25sp" />
           </RelativeLayout>


       </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@+id/soluongsptrongkho">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:layout_weight="1"
                android:id="@+id/btnCapNhapSua"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:layout_weight="1"
                android:id="@+id/btnHuySua"/>

        </LinearLayout>






    </RelativeLayout>
</LinearLayout>